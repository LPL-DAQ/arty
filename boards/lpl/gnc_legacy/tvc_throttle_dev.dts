        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>; // Max for chip
        zephyr,oversampling = <5>; // 32x averaging
    };

    channel@a {
        reg = <0xa>;
        zephyr,gain = "ADC_GAIN_1";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>; // Max for chip
        zephyr,oversampling = <5>; // 32x averaging
    };

    channel@b {
        reg = <0xb>;
        zephyr,gain = "ADC_GAIN_1";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>; // Max for chip
        zephyr,oversampling = <5>; // 32x averaging
    };

    channel@c {
        reg = <0xc>;
        zephyr,gain = "ADC_GAIN_1";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>; // Max for chip
        zephyr,oversampling = <5>; // 32x averaging
    };

    channel@f {
        reg = <0xf>;
        zephyr,gain = "ADC_GAIN_1";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,resolution = <12>; // Max for chip
