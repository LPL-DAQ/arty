&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

/*&clk_hse {
	hse-bypass;
	clock-frequency = <DT_FREQ_M(25)>;
	status = "okay";
};*/

&pll {
    div-m = <4>;
    mul-n = <60>;
    div-p = <2>;
    div-q = <2>;
    div-r = <2>;
    clocks = <&clk_hsi>;
    status = "okay";
};


&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(480)>;
    d1cpre = <1>;
	hpre = <2>;
	d1ppre = <2>;
	d2ppre1 = <2>;
	d2ppre2 = <2>;
	d3ppre = <2>;
    status = "okay";
};
